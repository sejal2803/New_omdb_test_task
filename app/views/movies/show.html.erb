
<div class="col-md-6">
  <h1><%= @movie["Title"] %></h1>
  <p><strong>Year:</strong> <%= @movie["Year"] %></p>
  <p><strong>Plot:</strong> <%= @movie["Plot"] %></p>
  <p><strong>Rating:</strong> <%= @movie["Ratings"][0]["Value"] %></p>
</div>
<div class="text-center mt-4">
  <%= link_to "Review", new_movie_review_path(movie_id: @movie["imdbID"]), class: "btn btn-success" %>
</div>
